# DevPockit Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT COMMIT THE .env FILE TO VERSION CONTROL

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_URL=sqlite:///./devpockit.db
# For production, use: postgresql://user:password@host:port/database

# Application Configuration
PROJECT_NAME=DevPockit
VERSION=1.0.0
API_V1_STR=/api/v1
ENVIRONMENT=development
DEBUG=true

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","https://your-domain.vercel.app"]

# Frontend Environment Variables (for Next.js)
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_APP_NAME=DevPockit
NEXT_PUBLIC_APP_VERSION=1.0.0
