# Database Configuration
DATABASE_URL=sqlite:///./devpockit.db
# For production: postgresql://user:password@host:port/database

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=DevPockit
VERSION=1.0.0

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000", "https://your-domain.vercel.app"]

# Environment
ENVIRONMENT=development
DEBUG=true

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_APP_NAME=DevPockit
NEXT_PUBLIC_APP_VERSION=1.0.0

# Vercel Configuration (for production)
VERCEL_URL=your-app.vercel.app
VERCEL_ENV=production
